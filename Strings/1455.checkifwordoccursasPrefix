class Solution {
    public int isPrefixOfWord(String sentence, String searchWord) {

        String[] words = sentence.split(" "); // variable name changed to 'words'

        for (int i = 0; i < words.length; i++) {
            if (words[i].startsWith(searchWord)) { // 'startsWith' is case-sensitive
                return i + 1; // return position (1-based index)
            }
        }

        return -1;
    }
}
